{
  "compilerOptions": {
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "amd",
    "target": "es5",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "../../../../node_modules/@types"
    ],
    "outDir": "../../../../target/classes/static",
    "sourceMap": true,
    "allowJs": true,
    "sourceRoot": ".",
    "importHelpers": true,
    "skipLibCheck": true //to avoid https://github.com/ui-router/angular-hybrid/issues/70 ,i.e. jqlite.d.ts(29,5): error TS2375: Duplicate number index signature:
  },
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "../../../../node_modules",
    "./node_modules",
    "./bower_components",
    "./js/vendor"
  ],
  "angularCompilerOptions": {
    "genDir": "../../../../target/classes/static",
    "skipMetadataEmit" : false,
    "fullTemplateTypeCheck": false,
    "preserveWhitespaces": true
  }
}
